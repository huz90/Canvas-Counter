{
  "manifest_version": 3,
  "name": "Canvas Counter",
  "version": "1.0.0",
  "description": "Canvas Counter - Gamified study tracker with pomodoro timer, meditation breaks, and achievement system",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://*.canvas.asu.edu/*",
    "*://*.canvas.instructure.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://*.canvas.asu.edu/*",
        "*://*.canvas.instructure.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas Counter"
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}